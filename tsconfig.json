{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": false,
    "strict": true,
    "target": "es2015",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true,
    "module": "esnext"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "lib/*",
    "example/*"
  ]
}
